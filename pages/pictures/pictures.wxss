Page {
    background: #fff;
}

.waterfall {
    width: 100%;
    position: relative;
}

.img_box {
    width: 50%;
    position: absolute;
    text-align: center;
    animation: fadeShow 1s;
    display: flex;
    justify-content: center;
}

.img_box image {
    width: 94%;
    border-radius: 2%;
}

.item_desc {
  position:absolute;
  bottom:0px;
  font-size:24rpx;
  height:40rpx;
  line-height:40rpx;
  width: 94%;
  background:rgba(0, 0, 0, 0.3);
  color:#fff;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.loading_box {
    width: 100%;
    text-align: center;
    position: absolute;
    z-index: 1000;
    bottom: 30rpx;
    left: 49%;
}

.loading_fade_circle {
    width: 30rpx;
    height: 30rpx;
    background: #1ab394;
    border-radius: 50%;
    -webkit-animation: fading_circle 1s ease-out infinite alternate;
    animation: fading_circle 1s ease-out infinite alternate;
}

@-webkit-keyframes fading_circle {
    0% {
        transform: scale(1.5);
        opacity: 0.2;
    }
    100% {
        transform: scale(0.1);
        opacity: 1;
    }
}

@keyframes fading_circle {
    0% {
        transform: scale(1.5);
        opacity: 0.2;
    }
    100% {
        transform: scale(0.1);
        opacity: 1;
    }
}

@-webkit-keyframes fadeShow {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

@keyframes fadeShow {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
